<Window x:Class="WpfApp1.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AdminPanel" Height="1024" Width="1440">
    <Grid Width="1440" Height="1024">
        <Grid Width="1440" Height="1024" Background="#FFF4E1E3">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
                <Rectangle HorizontalAlignment="Center" Height="84" VerticalAlignment="Center" Width="1440">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <LinearGradientBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                    <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="#FFF2A65B" Offset="0"/>
                            <GradientStop Color="#FFEE7A6E" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock HorizontalAlignment="Left" Margin="134,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontFamily="Verdana" FontSize="32" Height="40" Width="288" Foreground="White"><Run Language="ru-ru" Text="ТРАНБОЛОНШОП"/></TextBlock>
                <Image HorizontalAlignment="Left" Height="64" Margin="60,0,0,0" VerticalAlignment="Center" Width="64" Source="/image2.png"/>
                <Button x:Name="account" Content="" HorizontalAlignment="Left" Margin="1344,0,0,0" VerticalAlignment="Center" Width="36" Height="36" Click="account_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/Logout.png"/>
                    </Button.Background>
                </Button>

            </Grid>
            <Grid HorizontalAlignment="Center" Height="940" VerticalAlignment="Top" Width="1440" Background="#FFF4E1E3" Margin="0,84,0,0">
                <Grid HorizontalAlignment="Center" Height="812" VerticalAlignment="Center" Width="1320" Background="White">
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Админ-панель" VerticalAlignment="Top" Margin="20,20,0,0" Width="207" Height="28" FontFamily="Verdana" FontSize="24" FontWeight="Bold"/>
                    <Grid HorizontalAlignment="Center" Height="302" VerticalAlignment="Center" Width="1280">
                        <Grid HorizontalAlignment="Left" Height="302" VerticalAlignment="Top" Width="564">
                            <TextBlock HorizontalAlignment="Left" Height="28" TextWrapping="Wrap" Text="Сотрудники" VerticalAlignment="Top" Width="170" FontFamily="Verdana" FontSize="24" FontWeight="Bold"/>
                            <Grid HorizontalAlignment="Left" Height="214" VerticalAlignment="Bottom" Width="564">
                                <Button Content="Посмотреть список сотрудников" HorizontalAlignment="Left" VerticalAlignment="Top" Height="58" Width="564" Padding="0,0,0,0" BorderThickness="0,0,0,0" FontFamily="Verdana" FontSize="24" BorderBrush="{x:Null}" Background="#FFEE7A6E" Foreground="White"/>
                                <Button Content="Добавить сотрудника" HorizontalAlignment="Center" VerticalAlignment="Center" Height="58" Width="564" Padding="0,0,0,0" BorderThickness="0,0,0,0" FontFamily="Verdana" FontSize="24" BorderBrush="{x:Null}" Background="#FFEE7A6E" Foreground="White"/>
                                <Button Content="Изменить данные сотрудника" HorizontalAlignment="Center" VerticalAlignment="Top" Height="58" Width="564" Padding="0,0,0,0" BorderThickness="0,0,0,0" FontFamily="Verdana" FontSize="24" BorderBrush="{x:Null}" Background="#FFEE7A6E" Foreground="White" Margin="0,156,0,0"/>
                            </Grid>
                        </Grid>
                        <Grid HorizontalAlignment="Left" Height="302" VerticalAlignment="Center" Width="564" Margin="716,0,0,0">
                            <TextBlock HorizontalAlignment="Left" Height="28" TextWrapping="Wrap" Text="Заказы" VerticalAlignment="Top" Width="170" FontFamily="Verdana" FontSize="24" FontWeight="Bold"/>
                            <Grid HorizontalAlignment="Left" Height="214" VerticalAlignment="Bottom" Width="564">
                                <Button Content="Посмотреть список заказов" HorizontalAlignment="Left" VerticalAlignment="Top" Height="58" Width="564" Padding="0,0,0,0" BorderThickness="0,0,0,0" FontFamily="Verdana" FontSize="24" BorderBrush="{x:Null}" Background="#FFEE7A6E" Foreground="White"/>
                                <Button Content="Добавить заказ" HorizontalAlignment="Center" VerticalAlignment="Center" Height="58" Width="564" Padding="0,0,0,0" BorderThickness="0,0,0,0" FontFamily="Verdana" FontSize="24" BorderBrush="{x:Null}" Background="#FFEE7A6E" Foreground="White"/>
                                <Button Content="Изменить заказ" HorizontalAlignment="Center" VerticalAlignment="Top" Height="58" Width="564" Padding="0,0,0,0" BorderThickness="0,0,0,0" FontFamily="Verdana" FontSize="24" BorderBrush="{x:Null}" Background="#FFEE7A6E" Foreground="White" Margin="0,156,0,0"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

        </Grid>

    </Grid>
</Window>
