<Window x:Class="WpfApp1.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LogIn" Height="1024" Width="1440">
    <Window.Resources>
    </Window.Resources>
    <Grid Width="1440" Height="1024">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
            <Rectangle HorizontalAlignment="Center" Height="84" VerticalAlignment="Center" Width="1440">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FFF2A65B" Offset="0"/>
                        <GradientStop Color="#FFEE7A6E" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock HorizontalAlignment="Left" Margin="134,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontFamily="Verdana" FontSize="32" Height="40" Width="288" Foreground="White"><Run Language="ru-ru" Text="ТРАНБОЛОНШОП"/></TextBlock>
            <Image HorizontalAlignment="Left" Height="64" Margin="60,0,0,0" VerticalAlignment="Center" Width="64" Source="/image2.png"/>
            <Button Content="" HorizontalAlignment="Left" Margin="1288,0,0,0" VerticalAlignment="Center" Width="36" Height="36">
                <Button.Background>
                    <ImageBrush ImageSource="/Search.png"/>
                </Button.Background>
            </Button>
            <Button Content="" HorizontalAlignment="Left" Margin="1344,0,0,0" VerticalAlignment="Center" Width="36" Height="36">
                <Button.Background>
                    <ImageBrush ImageSource="/Account Male.png"/>
                </Button.Background>
            </Button>

        </Grid>
        <Image Height="443" Width="1441" Source="/image 1 (1).jpg" Stretch="Fill" Margin="0,84,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,581,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Verdana" FontSize="32" FontWeight="Bold" Height="40" Width="220"><Run Language="ru-ru" Text="КАТЕГОРИИ"/><LineBreak/><Run Language="ru-ru"/></TextBlock>
        <Button Content="Инвентарь" HorizontalAlignment="Left" Margin="40,659,0,0" VerticalAlignment="Top" Height="300" Width="300" Foreground="White" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Padding="20,0,8,20" FontFamily="Verdana" FontSize="24">
            <Button.Background>
                <ImageBrush ImageSource="/Frame 4 (1).jpg"/>
            </Button.Background>
        </Button>
        <Button Content="Одежда" HorizontalAlignment="Left" Margin="400,659,0,0" VerticalAlignment="Top" Height="300" Width="300" Foreground="White" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Padding="20,0,8,20" FontFamily="Verdana" FontSize="24">
            <Button.Background>
                <ImageBrush ImageSource="/Frame 5.jpg"/>
            </Button.Background>
        </Button>
        <Button Content="Обувь" HorizontalAlignment="Left" Margin="740,659,0,0" VerticalAlignment="Top" Height="300" Width="300" Foreground="White" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Padding="20,0,8,20" FontFamily="Verdana" FontSize="24">
            <Button.Background>
                <ImageBrush ImageSource="/Frame 6.jpg"/>
            </Button.Background>
        </Button>
        <Button Content="Аксессуары" HorizontalAlignment="Left" Margin="1080,659,0,0" VerticalAlignment="Top" Height="300" Width="300" Foreground="White" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Padding="20,0,8,20" FontFamily="Verdana" FontSize="24">
            <Button.Background>
                <ImageBrush ImageSource="/Frame 6 (1).jpg"/>
            </Button.Background>
        </Button>
        <Rectangle HorizontalAlignment="Center" Height="1028" VerticalAlignment="Top" Width="1440" Fill="#4C000000"/>
        <Border HorizontalAlignment="Center" Background="White" Height="780" Margin="0,164,0,0" VerticalAlignment="Top" Width="625" BorderBrush="White" CornerRadius="8,8,8,8" BorderThickness="1,1,1,1" >
        <Grid>
            <Grid HorizontalAlignment="Center" Height="676" Margin="0,103,0,0" VerticalAlignment="Top" Width="625">
                    <Grid HorizontalAlignment="Center" Height="48" Margin="0,40,0,0" VerticalAlignment="Top" Width="545">
                        <Button Content="Регистрация" Style="{DynamicResource ButtonStyle1}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="48" Width="272" Background="#FFF9DCDF" Foreground="#FFE4AEB4" FontFamily="Verdana" FontSize="24" BorderThickness="0,0,0,0" BorderBrush="{x:Null}" Click="Button_Click"/>
                        <Button Content="Вход" HorizontalAlignment="Left" VerticalAlignment="Center" Height="48" Width="272.5" Margin="272.5,0,0,0" Background="#FFF2A65B" Foreground="White" FontFamily="Verdana" FontSize="24" Grid.RowSpan="1" Grid.ColumnSpan="1" BorderThickness="0,0,0,0" BorderBrush="{x:Null}" />
                    </Grid>
                    <Grid HorizontalAlignment="Center" Height="122" VerticalAlignment="Center" Width="545">
                        <TextBox x:Name="passwordInput" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Bottom" Width="543" Height="51" Padding="20,0,0,0" VerticalContentAlignment="Center" FontFamily="Verdana" FontSize="18" Foreground="#FFE4AEB4" Background="#FFF9DCDF" BorderBrush="#FFF9DCDF"/>
                        <TextBox x:Name="loginInput" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="543" Height="51" Padding="20,0,0,0" VerticalContentAlignment="Center" FontFamily="Verdana" FontSize="18" Foreground="#FFE4AEB4" Background="#FFF9DCDF" BorderBrush="#FFF9DCDF"/>
                    </Grid>
                </Grid>
                <Button Style="{DynamicResource ButtonStyle1}" Content="Войти" HorizontalAlignment="Center" Margin="0,0,0,45" VerticalAlignment="Bottom" FontFamily="Verdana" FontSize="24" Width="545" Height="58" BorderBrush="{x:Null}" Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <LinearGradientBrush.RelativeTransform>
                                <TransformGroup>
                                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                    <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="#FFF2A65B"/>
                            <GradientStop Color="#FFEE7A6E" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </Grid>
        </Border>
        <Border HorizontalAlignment="Center" Height="104" Margin="0,164,0,0" VerticalAlignment="Top" Width="625" CornerRadius="8,8,0,0">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFF2A65B"/>
                    <GradientStop Color="#FFEE7A6E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <TextBlock HorizontalAlignment="Left" Height="76" Margin="40,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="386" Foreground="White" FontFamily="Verdana" FontSize="32"><Run Text="ВОЙТИ ИЛИ"/><LineBreak/><Run Language="ru-ru" Text="ЗАРЕГИСТРИРОВАТЬСЯ"/><LineBreak/><Run Language="ru-ru"/></TextBlock>
                <Button Content="" HorizontalAlignment="Right" Height="36" VerticalAlignment="Center" Width="36" Margin="0,0,40,0">
                    <Button.Background>
                        <ImageBrush ImageSource="/Close.png"/>
                    </Button.Background>
                </Button>
            </Grid>

        </Border>

    </Grid>
</Window>
