<Window x:Class="WpfApp2.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Register" Height="1024" Width="1440">
    <Grid Width="1440" Height="1024" Background="#FFEEEEEE">
        <Grid HorizontalAlignment="Left" Height="1024" VerticalAlignment="Center" Width="267" Background="White">
            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,20,0" Width="227" Height="81.49">
                <Grid HorizontalAlignment="Left" Height="60" VerticalAlignment="Center" Width="60" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-45"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Image Margin="0,0,0,0" Source="/Images/logo.png" Stretch="Fill"/>
                </Grid>
                <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" Typography.Capitals="AllSmallCaps" VerticalAlignment="Center" FontFamily="Verdana" FontSize="28"><Run Text="Тр"/><Run Language="ru-ru" Text="е"/><Run Text="нболон"/><LineBreak/><Run Text="shop"/></TextBlock>
            </Grid>
            <Grid x:Name="menu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20, 141.49, 20, 0" Width="227">
                <Border x:Name="allGoods" Style="{DynamicResource BorderStyle1}" VerticalAlignment="Top" Height="66" CornerRadius="30,30,30,30" >
                    <Grid Background="{x:Null}" >
                        <Image HorizontalAlignment="Left" VerticalAlignment="Center" Source="/Images/Stack Of Paper.png" Width="36" Height="36" Margin="20, 0, 0, 0" />
                        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="76, 0, 0, 0" FontFamily="Verdana" FontSize="20"><Run Text="Все товары"/></TextBlock>
                    </Grid>
                </Border>
                <Border x:Name="invent" Style="{DynamicResource BorderStyle1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="227" Height="66" Margin="0,76,0,0" CornerRadius="30,30,30,30">
                    <Grid>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Center" Source="Images/Soccer Ball.png" Width="36" Height="36" Margin="20, 0, 0, 0" />
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="76, 0, 0, 0" FontFamily="Verdana" FontSize="20" Foreground="Black"><Run Language="ru-ru" Text="Инвентарь"/></TextBlock>
                    </Grid>
                </Border>
                <Border x:Name="clothes" Style="{DynamicResource BorderStyle1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="227" Height="66" Margin="0,152,0,0" CornerRadius="30,30,30,30">
                    <Grid>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Center" Source="/Images/Jersey.png" Width="36" Height="36" Margin="20, 0, 0, 0" />
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="76, 0, 0, 0" FontFamily="Verdana" FontSize="20"><Run Language="ru-ru" Text="Одежда"/></TextBlock>
                    </Grid>
                </Border>
                <Border x:Name="shoes" Style="{DynamicResource BorderStyle1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="227" Height="66" Margin="0,238,0,0" CornerRadius="30,30,30,30">
                    <Grid>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Center" Source="/Images/Roller Skates.png" Width="36" Height="36" Margin="20, 0, 0, 0" />
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="76, 0, 0, 0" FontFamily="Verdana" FontSize="20"><Run Language="ru-ru" Text="Обувь"/></TextBlock>
                    </Grid>
                </Border>
                <Border x:Name="food" Style="{DynamicResource BorderStyle1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="227" Height="66" Margin="0,324,0,0" CornerRadius="30,30,30,30">
                    <Grid>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Center" Source="/Images/Energy Drink.png" Width="36" Height="36" Margin="20, 0, 0, 0" />
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="76, 0, 0, 0" FontFamily="Verdana" FontSize="20"><Run Language="ru-ru" Text="Питание"/></TextBlock>
                    </Grid>
                </Border>
                <Border x:Name="trainer" Style="{DynamicResource BorderStyle1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="227" Height="66" Margin="0,409,0,0" CornerRadius="30,30,30,30">
                    <Grid>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Center" Source="/Images/Bench Press.png" Width="36" Height="36" Margin="20, 0, 0, 0" />
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="76, 0, 0, 0" FontFamily="Verdana" FontSize="20"><Run Language="ru-ru" Text="Тренажёры"/></TextBlock>
                    </Grid>
                </Border>
                <Border x:Name="games" Style="{DynamicResource BorderStyle1}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="227" Height="66" Margin="0,496,0,0" CornerRadius="30,30,30,30">
                    <Grid>
                        <Image HorizontalAlignment="Left" VerticalAlignment="Center" Source="/Images/Knight.png" Width="36" Height="36" Margin="20, 0, 0, 0" />
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="76, 0, 0, 0" FontFamily="Verdana" FontSize="20"><Run Language="ru-ru" Text="Игры"/></TextBlock>
                    </Grid>
                </Border>
            </Grid>
            <Border Style="{DynamicResource BorderStyle1}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,20,60" Width="227" Height="46" CornerRadius="20">
                <Grid>
                    <Image HorizontalAlignment="Left" VerticalAlignment="Center" Width="36" Height="36" Source="/Images/Login Rounded.png" Margin="20, 0, 0, 0"/>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="76, 0, 0, 0" FontFamily="Verdana" FontSize="20"><Run Text="Войти"/></TextBlock>
                </Grid>
            </Border>
        </Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="693" Height="956" Margin="315,0,0,0">
            <ListBox x:Name="goods" HorizontalAlignment="Left" VerticalAlignment="Top" Width="693" Height="839" Margin="0,92,0,0" ItemsSource="{Binding DataCard}" Background="{x:Null}" BorderBrush="{x:Null}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="400"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="400"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Grid.Row" Value="{Binding Row}"/>
                        <Setter Property="Grid.Column" Value="{Binding Col}"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness = "1" CornerRadius="8,8,8,8" Background="White" Width="300" Height="400">
                            <Grid>
                                <Image HorizontalAlignment = "Center" Height="200" VerticalAlignment="Top" Margin="0, 20, 0, 0" Width="260" Source="{Binding BigImagePath}" Stretch="Fill"/>
                                <TextBlock HorizontalAlignment = "Left" Height="38" Margin="20,240,0,0" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Top" Width="260" FontFamily="Verdana" FontSize="16"/>
                                <TextBlock HorizontalAlignment = "Left" Height="21" Margin="20,298,0,0" TextWrapping="Wrap" Text="{Binding Price, StringFormat=\{0\}р.}" VerticalAlignment="Top" Width="71" FontFamily="Verdana" FontSize="16"/>
                                <Border Tag="{Binding Id}" HorizontalAlignment = "Left" Height="41" Margin="20,339,0,0" VerticalAlignment="Top" Width="260" CornerRadius="8,8,8,8" >
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint = "0.5,1" StartPoint="0.5,0">
                                            <LinearGradientBrush.RelativeTransform>
                                                <TransformGroup>
                                                    <ScaleTransform CenterY = "0.5" CenterX="0.5"/>
                                                    <SkewTransform CenterX = "0.5" CenterY="0.5"/>
                                                    <RotateTransform Angle = "-90" CenterX="0.5" CenterY="0.5"/>
                                                    <TranslateTransform/>
                                                </TransformGroup>
                                            </LinearGradientBrush.RelativeTransform>
                                            <GradientStop Color = "#FFF2A65B" />
                                            <GradientStop Color="#FFEE7A6E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Button Content = "В корзину" FontFamily="Verdana" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="1024" VerticalAlignment="Center" Width="384" Background="White" Margin="1056,0,0,0">
            <Border HorizontalAlignment="Center" Height="69" VerticalAlignment="Top" Width="384" BorderThickness="0,0,0,2" BorderBrush="#FFCDCDCD" >
                <Grid>
                    <TextBlock TextWrapping="Wrap" FontFamily="Verdana" FontSize="24" Padding="21,21,0,0" Height="80.75"><Run Language="ru-ru" Text="Корзина"/></TextBlock>
                    <Border HorizontalAlignment="Right" Height="32" Margin="0,20,20,0" VerticalAlignment="Top" Width="176" CornerRadius="8" >
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                        <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FFF25B5B"/>
                                <GradientStop Color="#FFEE6E6E" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Button Content="Очистить" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="Verdana" FontSize="18"/>
                    </Border>
                </Grid>
            </Border>
            <ListBox x:Name="basket" ItemsSource="{Binding BasketCells}" HorizontalAlignment="Left" Height="470" Margin="20,99,0,0" VerticalAlignment="Top" Width="344" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Hidden" BorderBrush="{x:Null}" Background="{x:Null}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="110"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="110"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="110"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="110"/>
                            </Grid.RowDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Grid.Row" Value="{Binding Row}"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border HorizontalAlignment = "Center" Height="110" VerticalAlignment="Top" Width="324" BorderBrush="#FFCDCDCD" BorderThickness="1" CornerRadius="8">
                            <Grid>
                                <Image HorizontalAlignment = "Left" Height="90" VerticalAlignment="Top" Width="90" Margin="20,10,0,0" Source="/image 4.jpg"/>
                                <Grid HorizontalAlignment = "Left" Height="90" Margin="120,10,0,0" VerticalAlignment="Top" Width="186">
                                    <TextBlock HorizontalAlignment = "Left" Height="42" TextWrapping="Wrap" Typography.Capitals="AllSmallCaps" Text="{Binding Title}" VerticalAlignment="Top" Width="186" Margin="0,10,0,0" FontFamily="Verdana"/>
                                    <TextBlock HorizontalAlignment = "Right" Height="14" TextWrapping="Wrap" Typography.Capitals="AllSmallCaps" VerticalAlignment="Bottom" Width="53" Margin="0,0,0,10" FontFamily="Verdana" Foreground="#FFF2A65B" TextAlignment="Right"><Run Text = "1299" /><Run Language="ru-ru" Text="р."/></TextBlock>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border HorizontalAlignment="Center" Height="156" Margin="0,651.88,0,0" VerticalAlignment="Top" Width="324" Background="#FFEFEFEF" CornerRadius="8,8,8,8">
                <Grid>
                    <Border HorizontalAlignment="Center" Height="68" Margin="0,20,0,0" VerticalAlignment="Top" Width="294" Padding="0,0,0,20" BorderThickness="0,0,0,2" BorderBrush="#FFCDCDCD">
                        <Grid>
                            <TextBlock HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Промежуточная стоимость" VerticalAlignment="Top" Width="188" FontFamily="Verdana" FontWeight="SemiBold" Foreground="#FF939393"/>
                            <TextBlock x:Name="half_price" HorizontalAlignment="Right" Height="19" TextWrapping="Wrap" Text="5196р." VerticalAlignment="Top" Width="59" FontFamily="Verdana" FontWeight="SemiBold" Foreground="#FF939393" TextAlignment="Right"/>
                            <TextBlock HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Налог 20%" VerticalAlignment="Top" Width="82" Margin="0,29,0,0" FontFamily="Verdana" FontWeight="SemiBold" Foreground="#FF939393"/>
                            <TextBlock x:Name="tax" HorizontalAlignment="Right" Height="19" TextWrapping="Wrap" Text="1039р." VerticalAlignment="Top" Width="59" Margin="0,29,0,0" FontFamily="Verdana" FontWeight="SemiBold" Foreground="#FF939393" TextAlignment="Right"/>
                        </Grid>
                    </Border>
                    <TextBlock HorizontalAlignment="Left" Height="28" Margin="20,0,0,20" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="70" FontFamily="Verdana" FontSize="20" FontWeight="SemiBold"><Run Language="ru-ru" Text="Итого"/></TextBlock>
                    <TextBlock x:Name="total_price" HorizontalAlignment="Right" Height="28" Margin="0,0,20,20" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="96" FontFamily="Verdana" FontSize="20" FontWeight="SemiBold" Text="6235р." TextAlignment="Right"/>
                </Grid>
            </Border>
            <Border HorizontalAlignment="Center" Height="63" VerticalAlignment="Bottom" Width="324" Margin="0,0,0,60" CornerRadius="8,8,8,8" >
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FFF2A65B"/>
                        <GradientStop Color="#FFEE7A6E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Button Content="Войти" FontFamily="Verdana" FontSize="20" BorderThickness="0,0,0,0" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" Click="Button_Click"/>
            </Border>
        </Grid>
        <Grid HorizontalAlignment = "Center" Height="1024" VerticalAlignment="Center" Width="1440" Background="#4C000000">
            <Border HorizontalAlignment = "Center" Height="800" VerticalAlignment="Center" Width="600" Background="White" CornerRadius="8,8,8,8">
                <Grid>
                    <Border HorizontalAlignment = "Center" Height="150" VerticalAlignment="Top" Width="600" CornerRadius="8,8,0,0">
                        <Border.Background>
                            <LinearGradientBrush EndPoint = "0.5,1" StartPoint="0.5,0">
                                <GradientStop Color = "#FFF2A65B" />
                                <GradientStop Color="#FFEE7A6E" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock HorizontalAlignment = "Left" Height="56" Margin="40,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="312" FontFamily="Verdana" FontSize="48" Foreground="White" Text="Регистрация"/>
                            <Button Width = "64" Height="64" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,40,0" Click="Button_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource = "Images/Close.png" />
                                </Button.Background>
                            </Button>
                        </Grid>
                    </Border>
                    <Grid HorizontalAlignment="Left" Height="650" Margin="0,150,0,0" VerticalAlignment="Top" Width="600">
                        <Grid HorizontalAlignment = "Center" Height="320" Margin="0,72,0,0" VerticalAlignment="Top" Width="520">
                            <Border HorizontalAlignment = "Center" Height="80" Margin="0,0,0,0" VerticalAlignment="Top" Width="520" Background="#FFEFEFEF" CornerRadius="8,8,8,8" >
                                <TextBox x:Name="loginInput" TextWrapping="Wrap" Text="Логин" FontFamily="Verdana" FontSize="24" VerticalContentAlignment="Center" Padding="30,0,0,0" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FFCDCDCD" PreviewMouseLeftButtonDown="loginInput_PreviewMouseLeftButtonDown"/>
                            </Border>
                            <Border HorizontalAlignment = "Center" Height="80" Margin="0,0,0,0" VerticalAlignment="Center" Width="520" Background="#FFEFEFEF" CornerRadius="8,8,8,8" >
                                <TextBox x:Name="passwordInput" TextWrapping="Wrap" Text="Пароль" FontFamily="Verdana" FontSize="24" VerticalContentAlignment="Center" Padding="30,0,0,0" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FFCDCDCD" PreviewMouseLeftButtonDown="passwordInput_PreviewMouseLeftButtonDown"/>
                            </Border>
                            <Border HorizontalAlignment = "Center" Height="80" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="520" Background="#FFEFEFEF" CornerRadius="8,8,8,8" >
                                <TextBox x:Name="confirmPassword" TextWrapping="Wrap" Text="Подтвердить пароль" FontFamily="Verdana" FontSize="24" VerticalContentAlignment="Center" Padding="30,0,0,0" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FFCDCDCD" PreviewMouseLeftButtonDown="confirmPassword_PreviewMouseLeftButtonDown"/>
                            </Border>
                        </Grid>
                        <Grid HorizontalAlignment = "Center" Height="104" Margin="0,474,0,0" VerticalAlignment="Top" Width="520">
                            <Border HorizontalAlignment = "Center" Height="63" VerticalAlignment="Top" Width="520" CornerRadius="8,8,8,8" PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown" >
                                <Border.Background>
                                    <LinearGradientBrush EndPoint = "0.5,1" StartPoint="0.5,0">
                                        <LinearGradientBrush.RelativeTransform>
                                            <TransformGroup>
                                                <ScaleTransform CenterY = "0.5" CenterX="0.5"/>
                                                <SkewTransform CenterX = "0.5" CenterY="0.5"/>
                                                <RotateTransform Angle = "-90" CenterX="0.5" CenterY="0.5"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Color = "#FFF2A65B" />
                                        <GradientStop Color="#FFEE7A6E" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Button Content = "Создать" FontFamily="Verdana" FontSize="20" Foreground="White" BorderBrush="{x:Null}" Background="{x:Null}"/>
                            </Border>
                            <Grid HorizontalAlignment = "Center" Height="30" VerticalAlignment="Bottom" Width="217">
                                <TextBlock HorizontalAlignment = "Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="151" Margin="0,0,0,7" FontFamily="Verdana" FontSize="20" Text="Есть аккаунт?"/>
                                <Button HorizontalAlignment = "Left" VerticalAlignment="Center" Width="66" Margin="151,0,0,0" FontFamily="Verdana" FontSize="20" Content="Войти" Foreground="#FFF2A65B" Background="{x:Null}" BorderBrush="#FFF2A65B" BorderThickness="0,0,0,1" Padding="0,0,0,4" Height="30" Click="Button_Click_1" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</Window>
